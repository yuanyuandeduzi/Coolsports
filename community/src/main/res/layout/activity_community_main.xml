<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.community_MainActivity">

    <TextView
        android:id="@+id/location_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="社区"
        android:textColor="@color/text_color_2"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/location_community_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="74dp"
        android:background="#AEABAB"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/p_1"
        app:layout_constraintBottom_toBottomOf="@id/location_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/location_1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVIew_community_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_community_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>