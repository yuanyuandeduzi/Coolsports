<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Plan_Activity_Discern">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="识热量"
        android:textColor="@color/text_color_2"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/location_plan_discern_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="74dp"
        android:background="#AEABAB"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plan_im_discern_1"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/p_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_plan_discern_1" />

    <View
        android:id="@+id/location_plan_discern_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="#AEABAB"
        app:layout_constraintTop_toBottomOf="@id/plan_im_discern_1" />

    <TextView
        android:id="@+id/plan_tv_discern_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="菜名：红烧肉"
        android:textColor="@color/text_color_3"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_plan_discern_2" />

    <TextView
        android:id="@+id/plan_tv_discern_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="热量：500ka"
        android:textColor="@color/text_color_3"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/plan_tv_discern_1"
        app:layout_constraintTop_toBottomOf="@id/plan_tv_discern_1" />

    <View
        android:id="@+id/location_plan_discern_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="#AEABAB"
        app:layout_constraintTop_toBottomOf="@id/plan_tv_discern_2" />

    <Button
        android:id="@+id/plan_bt_discern_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_plan_discern_3" />

</androidx.constraintlayout.widget.ConstraintLayout>